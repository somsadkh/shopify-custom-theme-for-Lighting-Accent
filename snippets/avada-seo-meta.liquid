{% endif %}

{% if request.page_type == 'collection' %}
{%- capture avada_seo_meta_title -%}{{ collection.title }}{%- endcapture -%}
{%- capture avada_seo_meta_description -%}Explore {{ collection.title }} at LightingAccent.com. ✓ 100% Lowest Price Guaranteed. ✓ Free Shipping ✓ Best Customer Service ✓ Quality Products{%- endcapture -%}
{% endif %}

{% if avada_seo_meta_title %}
{%- assign seo_title = avada_seo_meta_title | strip_html | strip -%}
{%- assign page_title = seo_title -%}
{%- assign og_title = seo_title -%}
{% endif %}

{% if avada_seo_meta_description %}
{%- assign page_description = avada_seo_meta_description | strip_html | strip -%}
{%- assign og_description = page_description -%}
{% endif %}
